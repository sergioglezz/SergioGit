{% extends 'base.html.twig' %}

{% block title %}{% trans %}Hello{% endtrans %} {{ controller_name }}!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{% trans %}Hello{% endtrans %} {{ controller_name }}! ✅</h1>
    <h1>{{'Hello'|trans}} {{ controller_name }}! ✅</h1>
    
    <h1>{% trans with {'%name%': name} %}Wellcome %name% {% endtrans %}</h1>

    <p>{{ 'apples'|trans({'%name%': name, '%count%': 0}) }}</p>
    <p>{{ 'apples'|trans({'%name%': name, '%count%': 1}) }}</p>
    <p>{{ 'apples'|trans({'%name%': name, '%count%': 2}) }}</p>
    
    <hr>

    {% trans %}This friendly message is coming from{% endtrans %}:
    {{'This friendly message is coming from'|trans}}:
    <ul>
        <li>{% trans %}Your controller at {% endtrans %}<code><a href="{{ 'src/Controller/DemoController.php'|file_link(0) }}">src/Controller/DemoController.php</a></code></li>
        <li>{{'Your controller at'|trans}}<code><a href="{{ 'src/Controller/DemoController.php'|file_link(0) }}">src/Controller/DemoController.php</a></code></li>
        <li>{% trans %}Your template at {% endtrans %}<code><a href="{{ 'templates/demo/index.html.twig'|file_link(0) }}">templates/demo/index.html.twig</a></code></li>
        <li>{{'Your template at'|trans}}<code><a href="{{ 'templates/demo/index.html.twig'|file_link(0) }}">templates/demo/index.html.twig</a></code></li>
    </ul>
</div>
{% endblock %}